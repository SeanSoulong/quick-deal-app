<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (simulated) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1F000000" /> <!-- 12% black -->
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Border + Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#1A000000"/> <!-- 10% black -->
            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>
